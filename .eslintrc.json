{
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "extends": "airbnb-base",
  "rules": {
    "no-param-reassign": ["error", {
      "props": false
    }],
    "comma-dangle": ["error", {
      "arrays": "always",
      "objects": "always",
      "functions": "never"
    }],
    "arrow-parens": ["error", "as-needed"],
    "semi": 2
  }
}